# Focus window
cmd + ctrl - h : ~/.config/skhd/focus.sh --left
cmd + ctrl - j : ~/.config/skhd/focus.sh --down
cmd + ctrl - k : ~/.config/skhd/focus.sh --up
cmd + ctrl - l : ~/.config/skhd/focus.sh --right

# Position window
shift + cmd + ctrl - m : ~/.config/skhd/position.sh 0
shift + cmd + ctrl - 0x2B : ~/.config/skhd/position.sh 1
shift + cmd + ctrl - 0x2F : ~/.config/skhd/position.sh 2

# Resize window
shift + cmd + ctrl - h : ~/.config/skhd/resize.sh --grow --left
shift + alt + cmd + ctrl - h : ~/.config/skhd/resize.sh --shrink --right
shift + cmd + ctrl - j : ~/.config/skhd/resize.sh --down
shift + cmd + ctrl - k : ~/.config/skhd/resize.sh --up
shift + cmd + ctrl - l : ~/.config/skhd/resize.sh --grow --right
shift + alt + cmd + ctrl - l : ~/.config/skhd/resize.sh --shrink --left

# Move window to space
shift + cmd + ctrl - u : yabai -m window --space 1
shift + cmd + ctrl - i : yabai -m window --space 2
shift + cmd + ctrl - o : yabai -m window --space 3
shift + cmd + ctrl - p : yabai -m window --space 4

# Application shortcuts
cmd + ctrl - a : osascript ~/.config/skhd/iterm.scpt
cmd + ctrl - s : open -b com.apple.systempreferences
cmd + ctrl - f : osascript ~/.config/skhd/safari.scpt
